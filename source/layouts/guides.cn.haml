= wrap_layout 'cn' do
  .row.main-content
    .large-3.small-12.columns
      .hide-for-small
        .sidebar
          %nav
            %ul.side-nav
              %li.heading
                %i.fa.fa-book
                = '指南'
              %li.nav-guides-overview
                = link_to '指南总览', '/guides/overview.html'
              %li.nav-guides-concept
                = link_to '基本概念', '/guides/concept.html'
              %li.nav-guides-custom-styles
                = link_to '自定义搜索样式', '/guides/custom-styles.html'
              %li.nav-guides-custom-search
                = link_to '自定义搜索行为', '/guides/custom-search.html'
              %li.nav-guides-api-quickstart
                = link_to 'API 快速上手', '/guides/api-quickstart.html'
              %li.nav-guides-opensearch
                = link_to '添加 opensearch 支持', '/guides/opensearch.html'
    .large-9.small-12.columns
      .right-content
        - if content_for? :raw_content
          = yield_content :raw_content
        - else
          %h1= current_page.data.title
          %ol.toc
          .markdown= yield

  - content_for :second_nav do
    %ul.off-canvas-list
      %li
        %label= '指南'
      %li.nav-guides-overview
        = link_to '总览', '/guides/overview.html'
      %li.nav-guides-concept
        = link_to '基本概念', '/guides/concept.html'
      %li.nav-guides-custom-styles
        = link_to '自定义搜索样式', '/guides/custom-styles.html'
      %li.nav-guides-custom-search
        = link_to '自定义搜索行为', '/guides/custom-search.html'
      %li.nav-guides-api-quickstart
        = link_to 'API 快速上手', '/guides/api-quickstart.html'
      %li.nav-guides-opensearch
        = link_to '添加 opensearch 支持', '/guides/opensearch.html'

  - content_for :javascripts do
    :coffee
      $('li.nav-guides').addClass('active')
      $("li.nav-guides-#{current_page.data.section}").addClass('active')

    = partial '/layouts/toc'
