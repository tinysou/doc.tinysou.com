%head
  %meta{:charset => "utf-8"}/
  %meta{:content => "微搜索 文档中心", :name => "description"}/
  %meta{:content => "Freestorm", :name => "copyright"}/
  %link{:href => "/humans.txt", :rel => "author", :type => "text/plain"}/
  %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
  %meta{:content => "True", :name => "HandheldFriendly"}/
  %meta{:content => "320", :name => "MobileOptimized"}/
  %meta{:content => "yes", :name => "apple-mobile-web-app-capable"}/
  %meta{:content => "black-translucent", :name => "apple-mobile-web-app-status-bar-style"}/
  %meta{:content => "on", "http-equiv" => "cleartype"}/
  %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
  %title= data.page.title || "微搜索 文档中心"
  = stylesheet_link_tag "application"
  = stylesheet_link_tag "http://tinysou-cdn.qiniudn.com/tinysou.min.css"
  = yield_content :stylesheets
  - if content_for? :styles
    :css
      #{yield_content :styles}
  = javascript_include_tag "modernizr"
  = yield_content :head
%body
  .off-canvas-wrap
    .inner-wrap
      .row
        %nav.top-bar.hide-for-small
          %ul.title-area
            %li.name
              %h1
                %a{href: '/'}
                  = "文档中心"
          %section.top-bar-section
            %ul.left
              %li.has-form
                %form
                  %input.search-input{type: 'search', id: 'ts-search-input', placeholder: '搜索'}
          %section.top-bar-section
            %ul.right
              %li.nav-guides
                = link_to '指南', '/guides/overview.html'
              %li.nav-api
                = link_to 'API', '/v1/overview.html'
              %li.nav-crawler
                = link_to '爬虫', '/crawler/overview.html'
              %li.nav-libs
                = link_to '库与插件', '/libs/overview.html'
              %li.nav-changelog
                %a{href: 'http://blog.tinysou.com/cn/tags/文档中心.html'}= '更新日志'
              %li.nav-backtinysou
                %a{href: 'https://tinysou.com'}= '回到 微搜索'
      %nav.tab-bar.show-for-small
        %section.left-small
          %a.left-off-canvas-toggle.menu-icon
            %span
        %section.middle.tab-bar-section
          %h1.title= "微搜索 文档中心"
        - if content_for? :second_nav
          %section.right-small
            %a.right-off-canvas-toggle.menu-icon
              %span
      %aside.right-off-canvas-menu.show-for-small
        %ul.off-canvas-list
          %li
            %label= '目录'
          %li.nav-home
            = link_to '首页', '/'
          %li.nav-guides
            = link_to '指南', '/guides/overview.html'
          %li.nav-api
            = link_to 'API', '/v2/data/concepts.html'
          %li.nav-crawler
            = link_to '爬虫', '/crawler/overview.html'
          %li.nav-libs
            = link_to '库与插件', '/libs/overview.html'
          %li.nav-changelog
            %a{href: 'http://blog.tinysou.com/cn/tags/文档中心.html'}= "更新日志"
          %li
            %label= '站外链接'
          %li
            %a{href: 'https://github.com/tinysou/doc.tinysou.com'}= '本站源代码'
          %li
            %a{href: 'https://tinysou.com'}= '回到 微搜索'
      %aside.left-off-canvas-menu.show-for-small
        = yield_content :second_nav
      %hr
      / Main page container
      = yield
      / Footer
      %footer.footer
        .row
          .small-12.large-push-8.large-4.columns
            %ul.text-right
              %li
                = '站点托管在'
                %a.reverse{href: 'https://www.upyun.com/?md=geakit'}= '又拍云'
              %li
                = '站点源代码托管在 '
                %a.reverse{href: 'https://github.com/tinysou/doc.tinysou.com'}= 'GitHub'
          .small-12.large-pull-4.large-8.columns
            %ul.inline-list
              %li
                %a.reverse{href: 'https://tinysou.com'}= "© #{Date.today.year} 微搜索"
              %li
                %a.reverse{href: 'http://www.miibeian.gov.cn'}= '苏ICP备12071270号'
      %a.exit-off-canvas

  /[if lt IE 9]
    #ie-warning-overlay
      #ie-warning
        %h1 您还在使用化石时代的IE浏览器吗？
        %p
          为了获得最好的上网体验，我们建议您升级您的IE浏览器或者使用其他浏览器。
          您可以安装如下任何一款浏览器，来获得更佳的上网体验。
        %p 点击以下任何一个图标，即可跳转到相应的下载页面.
        %ul
          %li
            %a{href: 'http://microsoft.com/ie'}
              = image_tag 'browser_ie.png', :alt => "下载 Internet Explorer"
              %p Internet Explorer 9+
          %li
            %a{href: 'http://mozilla.org/firefox'}
              = image_tag 'browser_firefox.png', :alt => "下载 Firefox"
              %p Firefox
          %li
            %a{href: 'http://google.com/chrome'}
              = image_tag 'browser_chrome.png', :alt => "下载 Chrome"
              %p Google Chrome
          %li
            %a{href: 'http://apple.com/safari'}
              = image_tag 'browser_safari.png', :alt => "下载 Safari"
              %p Safari
          %li
            %a{href: 'http://opera.com'}
              = image_tag 'browser_opera.png', :alt => "下载 Opera"
              %p Opera

  / Javascript
  = javascript_include_tag "application"
  = javascript_include_tag 'http://tinysou-cdn.qiniudn.com/tinysou-nojquery.js'

  = yield_content :javascripts

  :javascript
    $(document).foundation();

  :javascript
    $(document).ready(function(){
      $('#ts-search-input').tinysouSearch({
        resultContainingElement: '#ts-results-container',
        engineKey: '97eaafba26b04d3cdeb9',
        perPage: 5,
        renderStyle: 'new_page',
        resultPageURL: '/search.html'
      });
    });

